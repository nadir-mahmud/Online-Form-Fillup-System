<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            />

        <TextView
            android:id="@+id/department_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Computer Science and Engineering"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Initial Date"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            />

        <TextView
            android:id="@+id/iniatial_date_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2021/03/10"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Without FIne"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            />

        <TextView
            android:id="@+id/without_fine_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2021/03/17"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With Fine"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            />

        <TextView
            android:id="@+id/with_fine_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2021/03/24"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fee Per Credit"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            />

        <TextView
            android:id="@+id/fee_per_credit_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fine Per Day"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            />

        <TextView
            android:id="@+id/fine_per_day_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            />

    </LinearLayout>

    <Button
        android:id="@+id/update"
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />

</LinearLayout>